<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.UserFormController"
      spacing="20.0"
      styleClass="form-container">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="User Information" styleClass="form-title"/>

    <VBox spacing="15.0">
        <VBox spacing="5.0">
            <Label text="Username" styleClass="field-label"/>
            <TextField fx:id="usernameField" promptText="Enter username" styleClass="form-field"/>
        </VBox>

        <VBox spacing="5.0">
            <Label text="Email Address" styleClass="field-label"/>
            <TextField fx:id="emailField" promptText="Enter email address" styleClass="form-field"/>
        </VBox>
    </VBox>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button fx:id="cancelButton" text="Cancel" onAction="#onCancel" styleClass="secondary-button"/>
        <Button fx:id="saveButton" text="Save" onAction="#onSave" styleClass="primary-button"/>
    </HBox>
</VBox>
