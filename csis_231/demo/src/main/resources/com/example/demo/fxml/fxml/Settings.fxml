<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.SettingsController"
            stylesheets="@../styles.css"
            prefWidth="800" prefHeight="600"
            styleClass="root">

    <VBox spacing="20" alignment="TOP_CENTER" prefWidth="800" prefHeight="600">


        <HBox alignment="CENTER" styleClass="header-section" prefHeight="120">
            <VBox alignment="CENTER" spacing="8">
                <Label text="Settings" styleClass="title-label" />
            </VBox>
        </HBox>

        <Button fx:id="backButton" text="← Back" style="-fx-font-weight: bold; -fx-background-color: #ff6f91; -fx-text-fill: white; -fx-background-radius: 8;"/>

        <ScrollPane fitToWidth="true" prefHeight="400" prefWidth="700" styleClass="scroll-pane">
            <VBox spacing="20" alignment="TOP_LEFT">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <Label text="Theme" styleClass="section-label" />
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Label text="Select Theme:" />
                    <ComboBox fx:id="themeComboBox" />
                </HBox>

                <Label text="Notifications" styleClass="section-label" />
                <VBox spacing="10">
                    <CheckBox fx:id="taskReminderCheckBox" text="Enable task reminders" />
                    <CheckBox fx:id="dailySummaryCheckBox" text="Enable daily summary notifications" />
                </VBox>

                <Label text="Profile Settings" styleClass="section-label" />
                <VBox spacing="10">
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <Label text="Username:" />
                        <TextField fx:id="usernameField" promptText="Enter your username" />
                    </HBox>
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <Label text="Email:" />
                        <TextField fx:id="emailField" promptText="Enter your email" />
                    </HBox>
                </VBox>

                <Button fx:id="saveSettingsButton" text="Save Settings" styleClass="primary-button" />
            </VBox>
        </ScrollPane>

        <HBox alignment="CENTER" styleClass="footer">
            <Label text="© 2025 Verve Planner — All Rights Reserved." />
        </HBox>

    </VBox>

</AnchorPane>
